<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        {% block stylesheets %}
        <!-- CSS only -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> 
            <link rel="stylesheet" href="{{asset('css/style.css')}}">
             <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"> 
            {# {{ encore_entry_link_tags('app') }} #}
            <style>
                .filter {
                    display: block;
                    position: sticky;
                    top: 20px;
                }
            </style>
        {% endblock %}

        {% block javascripts %}
            <!-- JavaScript Bundle with Popper -->
             <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            {# {{ encore_entry_script_tags('app') }} #}
        {% endblock %}
    </head>
    <body>
    <div>
    {% block nav %}
    {% include "partials/_nav.html.twig" %}
    {% endblock %}
    </div>
        <div class="container-fluid">
            <div class="row">
                {% block _sidebarleft %}
                <div class="col-3">
                   {# {% include 'partials/_sidebarleft.html.twig' %}   #}
                   {{ render(controller(
                       'App\\Controller\\RenderController::sidebarleft'
                   ))}}
                </div>
                {% endblock %}

                    <div class="col-7">       
                    {% block body %}

                    {% endblock %}
                    </div>

                {% block _sidebarright %}
                    
                        <div class="col-2">
                        {# {% include 'partials/_sidebarright.html.twig' %}   #}
                            {{ render(controller(
                                'App\\Controller\\RenderController::sidebarright'
                            ))}}
                        </div>
                    
                {% endblock %}

                {% block footer %}
                    {# {% include 'partials/_footer.html.twig' %} #}
                    {{ render(controller(
                        'App\\Controller\\RenderController::footer'
                    ))}}
                {% endblock %}
            </div>

        </div>
    </body>
</html>