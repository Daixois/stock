<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        {% block stylesheets %}
        <!-- CSS only -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            <link rel="stylesheet" href="{{asset('css/admin.css')}}">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
            {# {{ encore_entry_link_tags('app') }} #}
        {% endblock %}

        {% block javascripts %}
            <!-- JavaScript Bundle with Popper -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            {# {{ encore_entry_script_tags('app') }} #}
        {% endblock %}
    </head>
    <body>
    {% block body %}
        <div class="container">
		<div class="row">
			<aside class="col-2">
				<h2>Dashboard</h2>
				<div class="list-group">
					<a href="{{ path('admin_index') }}" class="list-group-item list-group-item-action{{currentPage == 'admin_index' ? ' active' }}" aria-current="true">
						Accueil
					</a>
					{# <a href="{{ path('admin_user_list') }}" class="list-group-item list-group-item-action{{currentPage == 'admin_user_list' ? ' active' }}">Comptes utilisateurs</a>
					<a href="{{ path('admin_tvshow_list') }}" class="list-group-item list-group-item-action{{currentPage == 'admin_tvshow_list' ? ' active' }}">Séries</a>
					<a href="{{ path('admin_category_list') }}" class="list-group-item list-group-item-action{{currentPage == 'admin_category_list' ? ' active' }}">Catégories</a>
					<a href="{{ path('admin_character_list') }}" class="list-group-item list-group-item-action{{currentPage == 'admin_character_list' ? ' active' }}">Personnages</a> #}
				</div>
			</aside>

			<main class="col-10 card">
				{% block content %}{% endblock %}
			</main>
		</div>
	</div>

    {% endblock %}
    </body>
</html>