{# {% extends 'base.html.twig' %} #}
{% extends 'admin.html.twig' %}
{% block stylesheets %}
{{parent()}}
<link rel="stylesheet" href="{{ asset('css/admin.css')}}">
{% endblock %}

{% block title %}User index{% endblock %}

{% block body %}

    <h1 class="text-light">User index</h1>

    <table class="table text-light">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Pseudo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.Pseudo }}</td>
                <td>
                    <a href="{{ path('admin_user_show', {'id': user.id}) }}"  class="btn btn-primary" role="button">show</a>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-info" role="button">edit</a>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-danger">Delete</a>
                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_user_new') }}" class="btn btn-light" role="button">Create new</a>
{% endblock %}
