<div class="card">
   
     <img src="https://image.tmdb.org/t/p/w500/{{ movie.poster_path }}" class="card-img-top d-inline-block p-3 card-poster" alt=" {{ movie.title }} ">
    
     <div class="card-body">
        <h5 class="card-title">{{ movie.title }}</h5>
        <p class="card-text card-synopsis">{{ movie.overview|length >100 ? movie.overview|slice(0, 200) ~ '[...]' : movie.overview}}</p>
        <p class="card-text card-year"><small class="text-muted">{{movie.releaseDate|date("Y")}}</small></p>
        <div class ="card-genre">
         {% for genre in movie.genres %}
        # {{genre}}
        {% endfor %}
        </div>
    </div>	
    
    <div class="card-body button liensParents">
        <div class="list-group list-group-horizontal">	
            <a class="btn btn-primary m-2 liens1" href="https://www.themoviedb.org/movie/{{ movie.tmdbId }}?language=fr" class="card-link">La Fiche Tmdb</a>
            <a class="btn btn-primary m-2 liens2" href="{{ path('movie_getdatabaseid', {id: movie.id}) }}" class="card-link">Voir la fiche du film</a>
        </div>
    </div>
</div>