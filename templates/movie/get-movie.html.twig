{% extends 'base.html.twig' %}

{% block title %}Hello Tom
{% endblock %}

{% block body %}


	<div class="card fichefilm">
		<div class="row">

			<div class="col col-md-4">
				<img src="https://image.tmdb.org/t/p/w500/{{ movie.poster_path }}" class="card-img-top h-100 fiche-poster" alt="{{ movie.title }}">
			</div>

			<div class="col col-md-8">
				<div class="card-body">
					<h5 class="fiche-title">
						<b>{{ movie.title }}</b>
					</h5>
					<p class="card-text fiche-synopsis">
						<i>{{ movie.overview }}</i>
					</p>
					<div class="list-group list-group-horizontal fiche-genre">
						{# <b>Genres :</b> #}
						{% for genre in movie.genres %}
							<p class="list-group">
								 # {{ genre }} 
							</p>
						{% endfor %}
					</div>
					<div class="fiche-id">
						<p class="list">
							<b>Id :
							</b>
							{{ movie.id }}</p>
					</div>

					<div class="list-group list-group-horizontal">
						<div class="card-body">						
						</div>
						<div class="card-body">						
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="list-group list-group-horizontal">
		<div class="card-body">
		<a class="btn btn-primary m-2" href="{{ path('movie_liste', {id: movie.id}) }}" class="card-link">Voir vos films</a>
		</div>
		<div class="card-body">
		<a class="btn btn-primary m-2" href="{{ path('movie_research') }}" class="card-link">Autre recherche</a>
		</div>
		<div class="card-body">
		<a class="btn btn-primary m-2" href="https://www.themoviedb.org/movie/{{ movie.tmdbId }}?language=fr" class="card-link">La Fiche Tmdb</a>
		</div>
		<div class="card-body">
		<a class="btn btn-primary m-2" href="{{ path('movie_getbyid', {id: movie.id}) }}" class="card-link">Voir la fiche du film</a>
		</div>
		<div class="card-body">
		<a class="btn btn-primary m-2" href="{{ path('movie_addid', {id: movie.id}) }}" class="card-link">Ajouter Ã  la collection</a>
		</div>
	</div>

{% endblock %}

