{% extends 'base.html.twig' %}

{% block title %}Hello Tom{% endblock %}

{% block body %}

    {% if app.user is null %}
        <p> Veuillez vous connecter pour accéder à votre collection. </p>

        <a class="btn btn-success" href="{{ path('app_login') }}" role="button">Se Connecter</a>
			<a class="btn btn-success" href="{{ path('app_register') }}" role="button">S'inscrire</a>
    {% else %}
        {# <p>Hello {{ app.user.username }}</p> #}
    <div class ="addFilm">
        <form id="researchForm" action="{{ path("movie_searchMovie")}}" method="get">
            <div class="mb-4">
                <input type="search" class="form-control" name="research" placeholder="Recherche un film">
            </div>
            <button type="submit" class="btn btn-primary mb-2" value="Search">Recherche</button>
        </form>
    </div>
    <div class="container">
			<div class="grid">
				{% for movie in movies %}
					{% include "movie/_cartemovie.html.twig"%}
				{% endfor %}
			</div>
		</div>

		<div style:"margin-top: 4rem;">
			{{ knp_pagination_render(movies) }}
		</div>
    {% endif %}
{% endblock %}



